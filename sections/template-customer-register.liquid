<style>

.reg-container {
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 12px 6px;
}

.RegForm{
    max-width: 400px;
    width: 100%;
}
.reg-title {
    text-align: center;
    font-size: 1.875rem;
    font-weight: bold;
    margin-top: 24px; 
}

.margin-8 {
    margin-top: 32px; 
}

.alert {
    position: relative;
    border: 1px solid #f56565; 
    background-color: #fed7d7; 
    color: #c53030; 
    padding: 12px 16px;
    font-weight: bold;
}

.error {
    display: block;
}

.margin-2 {
    margin: 8px 0; 
}

.input {
    position: relative;
    display: block;
    width: 100%;
    padding: 8px 12px; 
    border: 1px solid #ccc;
    border-radius: 4px;
}

.subtext {
    font-size: 0.875rem; 
    text-decoration: underline;
    color: #6b7280; 
    transition: color 0.3s ease;
}

.subtext:hover {
    color: #1f2937; 
}

.button {
    position: relative;
    width: 100%;
    padding: 8px 16px; 
    font-size: 0.875rem; 
    font-weight: 500;
    color: #fff;
    background-color: #4b5563; 
    border: none;
    border-radius: 4px;
    transition: background 0.3s ease;
}

.button:hover {
    background-color: #111827; 
}

.continue {
    margin-top: 24px; 
    text-align: center;
    font-size: 1.875rem; 
    font-weight: bold;
}
.block{
    display: block;
}
.none{
    display: none;
}
@media (max-width: 480px) {
        .RegForm{
            max-width: 250px;
        }
        
    }
</style>





<div class="reg-container">
    <div class="RegForm">
        <div>
            <h1 class="reg-title">Register an account</h1>
        </div>
        <div class="margin-8">
            {% form 'create_customer' %}
                {% if form.errors %}
                    <div class="alert" role="alert">
                        <strong >Error!</strong>
                        <p class="error">{{ form.errors | default_errors }}</p>
                    </div>
                {% endif %}
                <div class="margin-2">
                    <label for="first_name" class="sr-only">First name</label>
                    <input type="text"
                        name="customer[first_name]"
                        id="first_name"
                        autocomplete="given-name"
                        class="input"
                        placeholder="First name"
                    >
                </div>
                <div class="margin-2">
                    <label for="last_name" class="sr-only">Last name</label>
                    <input type="text"
                        name="customer[last_name]"
                        id="last_name"
                        autocomplete="family-name"
                        class="input"
                        placeholder="Last name"
                    >
                </div>
                <div class="margin-2">
                    <label for="birthday" class="sr-only">Birthday</label>
                    <input type="date"
                        name="customer[note][Birthday]"
                        id="birthday"
                        class="input"
                    >
                </div>
                <div class="margin-2">
                    <label for="email_address" class="sr-only">Email address</label>
                    <input type="email"
                        name="customer[email]"
                        id="email_address"
                        autocomplete="email"
                        class="input"
                        placeholder="Email address"
                    >
                </div>
                
                <div class="margin-2">
                    <label for="password" class="sr-only">Password</label>
                    <input type="password"
                        name="customer[password]"
                        id="password"
                        autocomplete="new-password"
                        class="input"
                        placeholder="Password"
                    >
                </div>
                
                <div>
                    <button type="submit" class="button">
                        Create account
                    </button>
                </div>
            {% endform %}
        </div>
    </div>
</div>