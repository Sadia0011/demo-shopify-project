<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.css"/>
<script src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js"></script>

<style>
    .swiper {
        position: relative;
        max-height: 600px;
    }
    .slider-image {
        display: block;
        width: 100%;
        object-fit: cover;
    }
    .slide-hero::before {
        content: "";
        width: 100%;
        height: 100%;
        position: absolute;
        left: 0;
        top: 0;
        background-color: rgba(0, 0, 0, 0.3);
        z-index: 10;
    }
    .banner-description {
        text-align: center;
        color: #ffffff;
        position: absolute;
        bottom: 20%;
        left: 39%;
        z-index: 10;
    }
    .banner-text {
        font-size: 40px;
        font-weight: 600;
    }
    .banner-button {
        background-color: #493628;
        border-radius: 8px;
        padding: 13px;
        color: white;
        font-size: 18px;
        text-decoration: none;
        font-weight: 600;
    }
    .swiper {
            height: 600px;
    }
    @media (max-width: 768px) {
        .banner-description{
            left: 39%;
        }
        .swiper {
            height: 400px;
        }
        .banner-text {
        font-size: 20px;
    }
    .banner-button {
        border-radius: 8px;
        padding: 5px;
        font-size: 12px;
    }
    }
    @media (max-width: 512px) {
        .banner-description{
            left: 27%;
        }
        .swiper {
            height: 400px;
        }
        .banner-text {
        font-size: 20px;
    }
    .banner-button {
        border-radius: 8px;
        padding: 5px;
        font-size: 12px;
    }
    }
</style>

<div class="swiper">
    <div class="swiper-wrapper">
        {% for collection in collections %}
            <div class="swiper-slide slide-hero"
                style="background-image: url({% if collection.image %}{{ collection.image | img_url: 'large' }}{% else %}{{ 'image' | placeholder_svg_tag: 'w-20' }}{% endif %});
                background-size: cover; 
                background-position: center; 
                background-repeat: no-repeat;">
                <div class="banner-description">
                    <h2 class="banner-text">{{ collection.title }}</h2>
                    <a href="{{ collection.url }}" class="banner-button" >Continue Shopping</a>
                    
                </div>
            </div>
        {% endfor %}
    </div>
    <div class="swiper-pagination"></div>
    <div class="swiper-button-prev"></div>
    <div class="swiper-button-next"></div>
    <div class="swiper-scrollbar"></div>
</div>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        const swiper = new Swiper('.swiper', {
            direction: 'horizontal',
            loop: true,
            pagination: {
                el: '.swiper-pagination',
                clickable: true, 
            },
            navigation: {
                nextEl: '.swiper-button-next',
                prevEl: '.swiper-button-prev',
            },
            scrollbar: {
                el: '.swiper-scrollbar',
            },
        });
    });
</script>

{% schema %}
{
    "name": "Collection Banner",
    "presets": [
        {
            "name": "Collection Banner"
        }
    ]
}
{% endschema %}
