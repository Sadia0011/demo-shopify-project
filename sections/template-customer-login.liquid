<style>

.login-container {
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 12px 6px;
        flex-direction: column;
    }

    .loginForm, .pwRecoverForm {
        max-width: 400px;
        width: 100%;
        margin: 0 auto;
    }
    
    .pwRecoverForm {
        display: none;
    }

    .login-title {
        text-align: center;
        font-size: 1.875rem;
        font-weight: bold;
        margin-top: 24px;
    }

    .margin-8 {
        margin-top: 32px;
    }

    .alert {
        position: relative;
        border: 1px solid #f56565;
        background-color: #fed7d7;
        color: #c53030;
        padding: 12px 16px;
        font-weight: bold;
    }

    .error {
        display: block;
    }

    .margin-2 {
        margin: 8px 0;
    }

    .input {
        position: relative;
        display: block;
        width: 100%;
        padding: 8px 12px;
        border: 1px solid #ccc;
        border-radius: 4px;
    }

    .subtext {
        font-size: 0.875rem;
        text-decoration: underline;
        color: #6b7280;
        transition: color 0.3s ease;
    }

    .subtext:hover {
        color: #1f2937;
    }

    .button {
        position: relative;
        width: 100%;
        padding: 8px 16px;
        font-size: 0.875rem;
        font-weight: 500;
        color: #fff;
        background-color: #4b5563;
        border: none;
        border-radius: 4px;
        transition: background 0.3s ease;
    }

    .button:hover {
        background-color: #111827;
    }

    .continue {
        margin-top: 24px;
        text-align: center;
        font-size: 1.875rem;
        font-weight: bold;
    }

    .block {
        display: block;
    }

    .none {
        display: none;
    }

   
    @media (max-width: 768px) {
        .login-title {
            font-size: 1.5rem;
        }

        .margin-8 {
            margin-top: 24px;
        }

        .button {
            font-size: 0.75rem;
            padding: 10px 14px;
        }

        .input {
            padding: 10px 12px;
        }

        .login-container {
            padding: 20px;
        }
    }

    @media (max-width: 480px) {
        .loginForm, .pwRecoverForm {
            max-width: 250px;
        }
        .login-title {
            font-size: 1.25rem;
        }

        .margin-8 {
            margin-top: 16px;
        }

        .button {
            font-size: 0.75rem;
            padding: 12px 14px;
        }

        .input {
            padding: 12px 14px;
        }

        .login-container {
            padding: 10px;
        }

        .continue {
            font-size: 1.5rem;
        }
    }

</style>





<div class="login-container" x-data="{ loginForm: true, pwRecoverForm: false }">
    <div id="loginForm" class="loginForm">
        <div>
            <h1 class="login-title">Sign in to your account</h1>
        </div>
        <div class="margin-8">
            {% form 'customer_login' %}
                {% if form.errors %}
                    <div class="alert" role="alert">
                        <strong >Error!</strong>
                        <p class="error">{{ form.errors | default_errors }}</p>
                    </div>
                {% endif %}
                <div class="margin-2">
                    <label for="email_address" class="sr-only">Email address</label>
                    <input type="email"
                        name="customer[email]"
                        id="email_address"
                        autocomplete="email"
                        class="input"
                        placeholder="Email address"
                    >
                </div>
                {% if form.password_needed %}
                    <div class="margin-2">
                        <label for="password" class="sr-only">Password</label>
                        <input type="password"
                            name="customer[password]"
                            id="password"
                            autocomplete="current-password"
                            class="input"
                            placeholder="Password"
                        >
                    </div>
                {% endif %}
                <div class="margin-2">
                    <a id="forgotPassword" href="#" class="subtext"> 
                        Forgot your password?
                    </a>
                </div>
                <div>
                    <button type="submit" class="button">
                        Sign in
                    </button>
                </div>
            {% endform %}
        </div>

        {% if shop.checkout.guest_login %}
            <hr class="margin-8">
            <div>
                <h1 class="continue">Continue as a guest</h1>
            </div>
            {% form 'guest_login' %}
                <div>
                    <button type="submit" class="button">
                        Continue
                    </button>
                </div>
            {% endform %}
        {% endif %}

    </div>
    <div id="pwRecoverForm" class="pwRecoverForm">
        <div>
            <h1 class="login-title">Recover your password</h1>
        </div>
        <div class="margin-8">
            {% form 'recover_customer_password' %}
                {% if form.errors %}
                    <div class="alert" role="alert">
                        <strong>Error!</strong>
                        <p class="error">{{ form.errors | default_errors }}</p>
                    </div>
                {% endif %}
                <div class="margin-2">
                    <label for="email" class="sr-only">Email address</label>
                    <input type="email"
                        name="email"
                        id="email"
                        autocomplete="email"
                        class="input"
                        placeholder="Email address"
                    >
                </div>
                <div>
                    <button type="submit" class="button">
                        Recover password
                    </button>
                </div>
                <div class="margin-8">
                    <a id="backToLogin" href="#" class="subtext">Back to login</a>
                </div>
            {% endform %}
        </div>
    </div>
</div>


<script>
    document.querySelector("#forgotPassword").addEventListener("click",()=>{
      document.querySelector("#pwRecoverForm").classList.add("block");
      document.querySelector("#loginForm").classList.add("none");
    })
    document.querySelector("#backToLogin").addEventListener("click",()=>{
      document.querySelector("#loginForm").classList.remove("none");
      document.querySelector("#pwRecoverForm").classList.remove("block");
    })
</script>