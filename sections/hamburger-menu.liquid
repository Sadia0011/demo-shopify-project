
<style>
    .hamburgur-menu {
        position: fixed;
        top: 0;
        left: -9999px;
        opacity: 0;
        width: 100%;
        height: 100%;
        background: rgba(0, 0, 0, 0.7);
        z-index: 99999;
        display: flex;
        flex-direction: column;
        padding: 24px;
        transition: left 0s 0.2s, opacity 0.2s;
    }
    .hamburgur-menu--active {
        left: 0;
        opacity: 1;
        transition: left 0s, opacity 0.2s;
    }
    .hamburgur-menu-box {
        width: 480px;
        background: #f5f5f5;
        border-radius: 12px;
        flex: 1;
        margin-left: auto;
        display: flex;
        flex-direction: column;
        overflow: auto;
        transition: 0.2s opacity, 0.2s transform;
        opacity: 0;
        transform: translateX(40px);
        margin-bottom: 3rem;
        margin-right: 3rem;
    }
    .hamburgur-menu--active .hamburgur-menu-box {
        transform: none;
        opacity: 1;
    }
    .hamburgur-menu-header {
        display: flex;
        align-items: center;
        justify-content: space-between;
        padding: 24px;
        border-bottom: 1px solid #e7e7e7;
    }
    .title {
        font-size: 36px;
        color: #493628;
    }
    .close-btn {
        cursor: pointer;
        font-size: 24px;
        background: none;
        border: none;
        color: #000;
    }
    .close-btn:hover {
        color: red;
    }
    .nav-item a{
     text-decoration: none;
     color: #000;
    }
    .nav-item,.account-cart {
    padding: 1rem;
    border-bottom: 1px solid #e7e7e7;
    text-align: center;
    }
    .account-cart{
        text-align: center;
        display: block;
    }
    @media screen and (max-width: 768px) {
        .header-container nav,
        .right-nav {
            display: none;
        }
        .hamburgur-nav {
            display: block;
        }
    }
    @media screen and (max-width: 512px) {
        .hamburgur-menu-box{
            width: 200px;
        }
        .title {
            font-size: 24px;
        }
        .shopping-cart-count{
            right: 4rem;
            top: 0;
        }
    }
</style>


<div class="hamburgur-menu">
    <div class="hamburgur-menu-box">
        <header class="hamburgur-menu-header">
            <h2 class="title">All in One</h2>
            <button class="close-btn" id="closeMenu">âœ–</button>
        </header>

        <div class="hamburgur-dropdown">
            {% for link in linklists.main-menu.links %}
            <div class="nav-item">
                {% if link.links != blank %}
                <div class="navigation-drop">
                    <span class="nav-dropdown">{{ link.title }} {% render "icon-dropdown" %}</span>
                    <div class="dropdown">
                        {% for childlink in link.links %}
                        <a href="{{ childlink.url }}">{{ childlink.title }}</a>
                        {% endfor %}
                    </div>
                </div>
                {% else %}
                <a href="{{ link.url }}">{{ link.title }}</a>
                {% endif %}
            </div>
            {% endfor %}
            {% if shop.customer_accounts_enabled %}
            {% if customer %}
            <a href="{{ routes.account_url }}" class="account-cart">Account</a>
            {{ 'Log out' | customer_logout_link | replace: '<a', '<a class="account-cart"' }}
            {% else %}
            {{ 'Login ' | customer_login_link | replace: '<a', '<a class="account-cart"' }}
            {{ 'Register' | customer_register_link | replace: '<a', '<a class="account-cart"' }}
            {% endif %}
            {% endif %}
        </div>
    </div>
</div>

<script>
        document.addEventListener("DOMContentLoaded", function () {
            const menuDrawer = document.querySelector(".hamburgur-menu");
            const openButton = document.querySelector(".hamburgur-menu-icon"); // Ensure this class exists in your header
            const closeButton = document.getElementById("closeMenu");

            if (openButton) {
                openButton.addEventListener("click", () => {
                    menuDrawer.classList.add("hamburgur-menu--active");
                });
            }

            if (closeButton) {
                closeButton.addEventListener("click", () => {
                    menuDrawer.classList.remove("hamburgur-menu--active");
                });
            }

            // Close menu when clicking outside the box
            menuDrawer.addEventListener("click", (event) => {
                if (!event.target.closest(".hamburgur-menu-box")) {
                    menuDrawer.classList.remove("hamburgur-menu--active");
                }
            });
        });
</script>

{% schema %}
{
    "name": "hamburger-menu"
}
{% endschema %}
