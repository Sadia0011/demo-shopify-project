{{ 'product-card.css'|asset_url | stylesheet_tag }}

<style>

    .product-section {
        display: flex;
        justify-content: center;
        align-items: flex-start;
        gap: 20px;
        margin-top: 20px;
        /* background-color: antiquewhite; */
        position: relative;
        min-height: 120vh; 
    }

    .left-content {
        flex: 0 0 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        position: sticky;
        top: 10%;
        z-index: 3;
        min-width: 0;
        height: auto;
        padding: 50px;
    }

    .left-content img {
        max-width: 100%;
        height: auto;
        object-fit: cover;
    }

    .right-content {
        display: flex;
        flex-direction: column;
        align-items: center;
        min-height: 150vh; 
    }

    .right-content img {
        width: 600px;
        height: 600px;
        object-fit: cover;
        max-width: 100%;
    }

    @media (max-width: 1024px) {
        .product-section {
            flex-direction: column;
            align-items: center;
        }

        .left-content {
            position: static;
        }

        .right-content img {
            width: 100%;
            height: auto;
        }
    }
</style>

<div class="container">
    <div class="product-section">
        <div class="left-content">
            {% assign product = all_products['white-uni-shirt'] %}
            {% if product %}
                {% render 'product-card', product: product %}
            {% else %}
                <p>Product not found</p>
            {% endif %}
        </div>
        <div class="right-content">
            <img src="{{ section.settings.rightImage1 | img_url: 'medium' }}" alt="Product Image 1">
            <img src="{{ section.settings.rightImage2 | img_url: 'medium' }}" alt="Product Image 2">
            <img src="{{ section.settings.rightImage3 | img_url: 'medium' }}" alt="Product Image 3">
        </div>
    </div>
</div>


{% schema %}
{
    "name": "Product Section",
    "settings": [
        {
            "type": "image_picker",
            "id": "LeftImage",
            "label": "Main Product Image"
        },
        {
            "type": "image_picker",
            "id": "rightImage1",
            "label": "Product Image 1"
        },
        {
            "type": "image_picker",
            "id": "rightImage2",
            "label": "Product Image 2"
        },
        {
            "type": "image_picker",
            "id": "rightImage3",
            "label": "Product Image 3"
        }
    ],
    "presets": [
        {
            "name": "Product Section"
        }
    ]
}
{% endschema %}
