<!doctype html>
<html>
  <head>
    <title>{{ page_title }}</title>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="description" content="{{ page_description | escape }}">
    <link rel="canonical" href="{{ canonical_url }}">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Assistant:wght@200..800&family=Space+Mono:ital,wght@0,400;0,700;1,400;1,700&display=swap" rel="stylesheet">
    {% comment %} accordian {% endcomment %}
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>

    <meta name="viewport" content="width=device-width,initial-scale=1,shrink-to-fit=no">
    {{ content_for_header }}
    <!-- Header hook for plugins -->
    {{ 'application.css' | asset_url | stylesheet_tag }}
    {{ 'application.js' | asset_url | script_tag }}
    {% comment %} {{"https://unpkg.com/alpinejs@3.x.x/dist/cdn.min.js" | script_tag}}  {% endcomment %}
    {% comment %} {{ "https://cdn.jsdelivr.net/npm/alpinejs@3.x.x/dist/cdn.min.js" | script_tag }} {% endcomment %}
    {% comment %} <script src="https://unpkg.com/alpinejs@3.x.x/dist/cdn.min.js"></script> {% endcomment %}
     <style>
        .font {
            font-family: 'Assistant', sans-serif; 
        }
        body{
          position: relative;
          display: flex;
          flex-direction: column;
        }
        main{
          flex: 1;
        }

     </style>
  </head>
  <body class="font">
    {% section "header" %}
    <main role="main" >
      {% section "cart-drawer" %}
      {% section "hamburger-menu" %}
      {{ content_for_layout }}
    </main>
    {% section "footer" %}
  </body>
</html>