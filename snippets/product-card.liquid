<style>
      
    .product-card{
        border-radius: 16px; 
        box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
        width: 350px;
        height: 500px;
        position: relative;
      
    }
    .product-img-div{
        height: 90%;
        overflow: hidden;
    }
    .product-img{
        width: 100%;
        height: 100%;
        object-fit: cover;
        border-radius: 16px;
    }
    .product-description{
        display: flex;
        justify-content: space-around;
        align-items: center;
        font-size: 18px;
        padding-left: 10px;
        padding-right: 10px;
        position: absolute;
        bottom: 0;
        width: 100%;
        
    }
    .product-description a{
        text-decoration: none;
        color: black;

    }
    @media screen and (max-width: 768px) {
        .product-card{
        border-radius: 8px; 
        box-shadow: 2px 2px 3px gray ;
        width: 250px;
       }
        .product-description{
            font-size: 12px;
            padding-left: 5px;
            padding-right: 5px;
            
        }
    }
</style>



<div class="product-card" >
    <a href="{{ product.url }}">
        {% if product.featured_image %}
            <div class="product-img-div">
                <img class="product-img" src="{{ product.featured_image | img_url: 'medium' }}" alt="{{ product.featured_image.alt }}">
            </div>
            
        {% else %}
            {{ 'product-1' | placeholder_svg_tag}}
        {% endif %}
    </a>
    
    <div class="product-description">
       {% if section.settings.vendor_name %}
        <span ">{{ product.vendor }}</span>
       {% endif %}

        <a href="{{ product.url }}" >{{ product.title }}</a>

        <p>{{ product.price | money }}</p>
    </div>
    
</div>