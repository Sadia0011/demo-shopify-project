<style>
    .image{
        width: 100%;
        height: 100%;
        object-fit: cover;
    }
    .video{
        width: 100%;
        height: 80px;
        object-fit: cover;
    }
</style>

{% case media.media_type %}
    {% when 'image' %}
        <img src="{{ media | img_url: 'large' }}" alt="{{ media.preview_image.alt }}" class="image">
    {% when 'external_video' %}
        {{ media | external_video_tag: class: 'video' }}
    {% when 'video' %}
        {{ media | video_tag: controls: true, class: 'video' }}
    {% when 'model' %}
      {{ model |  model_viewer_tag }}
    {% else %}
        {{ media | media_tag }}      
{% endcase %}